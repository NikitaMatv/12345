<Page x:Class="DogsShop.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DogsShop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1000"
      Title="RegPage">

    <Grid>
        <Border BorderBrush="Black" BorderThickness="2" CornerRadius="10" Background="Transparent" Width="300" Height="400">
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center">
                <TextBlock FontSize="25">Регистрация</TextBlock>
                <TextBlock Margin="0 50 0 0 " FontSize="15">Кличка</TextBlock>
                <TextBox x:Name="TbName" Text="{Binding Name}" MaxLength="30"></TextBox>
                <TextBlock  Margin="0 10 0 0 " FontSize="15">Пароль</TextBlock>
                <TextBox Text="{Binding Password}" x:Name="TbPassword" MaxLength="30"></TextBox>
                <Button Margin="0 90 0 0"  FontSize="15" x:Name="BtReg" Click="BtReg_Click">Зарегестрироваться</Button>
                <Button Margin="0 5 0 0"  FontSize="15" x:Name="BtCansel" Click="BtCansel_Click">Отмена</Button>
            </StackPanel>
        </Border>
    </Grid>
</Page>
